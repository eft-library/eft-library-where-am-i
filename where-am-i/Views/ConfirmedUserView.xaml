<Window x:Class="where_am_i.Views.ConfirmedUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:where_am_i.ViewModels"
        Title="Where-Am-I" Height="200" Width="350">

    <Window.Resources>
        <!-- 예쁜 버튼 스타일 -->
        <Style x:Key="FancyButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4CAF50" Offset="0.0"/>
                        <GradientStop Color="#45A049" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#66BB6A" Offset="0.0"/>
                                            <GradientStop Color="#5AAA60" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 로고 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 로고 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Image Width="200" Height="60">
                <Image.Source>
                    <BitmapImage UriSource="https://image.eftlibrary.com/eftlibrary/tkl_main%2Flogo.png"/>
                </Image.Source>
            </Image>
        </StackPanel>

        <!-- 버튼 2개: 바로가기 + 종료 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 바로가기 버튼 -->
            <Button Grid.Column="0" Content="지도 바로가기" Command="{Binding OpenWebCommand}" Style="{StaticResource FancyButtonStyle}" HorizontalAlignment="Center"/>

            <!-- 종료 버튼 -->
            <Button Grid.Column="1" Content="프로그램 종료" Command="{Binding ExitCommand}" 
                    Background="#E53935" Foreground="White" FontWeight="Bold" Width="140" Height="40" Margin="5"
                    BorderThickness="0" Cursor="Hand" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
