<Window x:Class="where_am_i.Views.ConfirmedUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:where_am_i.ViewModels"
        Title="Where-Am-I" Height="360" Width="500">

    <Window.Resources>
        <Style x:Key="FancyButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#4CAF50" Offset="0.0"/>
                        <GradientStop Color="#45A049" Offset="1.0"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 로고 -->
            <RowDefinition Height="Auto"/>
            <!-- 경로 -->
            <RowDefinition Height="Auto"/>
            <!-- 버튼 -->
        </Grid.RowDefinitions>

        <!-- 로고 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Image Width="200" Height="60"
                   Source="https://image.eftlibrary.com/eftlibrary/tkl_main%2Flogo.png"/>
        </StackPanel>

        <!-- 감시 중인 경로 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="📂 감지 중인 스크린샷 경로"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>

            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Padding="6">
                <ScrollViewer Height="90">
                    <ItemsControl ItemsSource="{Binding WatchingPaths}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding StringFormat=• {0}}"
                                    FontSize="12"
                                    TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- 버튼 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="지도 바로가기"
                    Command="{Binding OpenWebCommand}"
                    Style="{StaticResource FancyButtonStyle}"
                    HorizontalAlignment="Center"/>

            <Button Grid.Column="1"
                    Content="프로그램 종료"
                    Command="{Binding ExitCommand}"
                    Background="#E53935"
                    Foreground="White"
                    FontWeight="Bold"
                    Width="140"
                    Height="40"
                    Margin="5"
                    BorderThickness="0"
                    Cursor="Hand"
                    HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
